<div class="details-receipt-container">
  <form class="update-receipt-form" action="/main/new-receipt" method="POST" enctype="multipart/form-data">
    <label for="">Image</label>
    <input type="file" name="image" accept="image/png, image/jpg">

    <label for="">Title</label>
    <input type="text" name="title">

    <label for="">Category</label>
    <select id="category" name="category" value="work euipment">
      <option value="work euipment">Work equipment</option>
      <option value="workspace">Workspace</option>
      <option value="car">Car</option>
      <option value="hardware">Hardware</option>
      <option value="software">Software</option>
      <option value="catering">Catering</option>
      <option value="other">Other</option>
    </select>

    <label for="">Date</label>
    <input type="date" name="date">

    <label for="">Amount in â‚¬</label>
    <input type="number" name="amount">

    <label for="">Comment</label>
    <input type="text" name="comment">

    <button class="profile-submitbtn" id="myBtn" type="submit">Create your receipt</button>
  </form>

  <!-- The Modal -->
  <div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      {{!-- <img src="{{jokeImage}}" alt="Chuck Norris Icon"> --}}

      <p>{{jokeText}}</p>
      <img id="img-chuck-norris-flames" src="/images/Modal-Chuck-Norris-Flames.png" alt="Chuck Norris in Flames">
    </div>

  </div>
</div>