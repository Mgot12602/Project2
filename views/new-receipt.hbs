<h3>Create a new receipt</h3>

<form action="/main/new-receipt" method="POST" enctype="multipart/form-data">
  <label for="">Image</label>
  <input type="file" name="image" accept="image/png, image/jpg">
  <br>
  <label for="">Title</label>
  <input type="text" name="title">
  <br>
  <label for="">Category</label>
  <select id="category" name="category" value="work euipment">
    <option value="work euipment">Work equipment</option>
    <option value="workspace">Workspace</option>
    <option value="car">Car</option>
    <option value="hardware">Hardware</option>
    <option value="software">Software</option>
    <option value="catering">Catering</option>
    <option value="other">Other</option>
  </select>
  <br>
  <label for="">Date</label>
  <input type="date" name="date">
  <br>
  <label for="">Amount in â‚¬</label>
  <input type="number" name="amount">
  <br>
  <label for="">Comment</label>
  <input type="text" name="comment">
  <br>
  <button id="myBtn" type="submit">Create your receipt</button>
</form>

