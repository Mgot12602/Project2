<a href="/profile">Check your profile</a>
<a href="/auth/logout">Logout</a>

<h1>Your Receipts</h1>
<h2>Sort by:<button id="sort-date">DATE</button></h2>

<a href="#/rides">Check your Rides</a>

<a href="/main/new-receipt">Create a new Receipt</a>

{{#each receipts}}

<div>
  <img src="{{this.image}}" alt="receipt image">
  <h3>{{this.title}}</h3>
  <h4>{{this.category}}</h4>
  <h4>{{this.date}}</h4>
  <a href="/receipts/{{id}}">See details</a>
  <a href="/main/update-receipt">Update receipt</a>
  <a href="/main/delete-receipt">Delete receipt</a>
</div>

{{/each}}